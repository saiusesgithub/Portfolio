---
interface Props {
  title: string;
  year: string;
  description: string;
  image: string;
  tags: string[];
  links?: {
    live?: string;
    github?: string;
    case?: string;
  };
}

const { title, year, description, image, tags, links } = Astro.props;
---

<div class="group relative w-full h-[80vh] border-beam-b overflow-hidden">
  <div 
    class="absolute inset-0 bg-cover bg-center transition-all duration-0 grayscale group-hover:grayscale-0" 
    style={`background-image: url('${image}');`}
  >
  </div>
  
  <!-- Overlay Info -->
  <div class="absolute bottom-0 left-0 w-full lg:w-1/2 p-6 lg:p-10 bg-gradient-to-t from-black to-transparent">
    <div class="font-tech text-xs text-safety-orange mb-2 uppercase tracking-widest">
      Completed: {year}
    </div>
    <h3 class="text-4xl lg:text-6xl text-white font-extrabold uppercase tracking-tight leading-none mb-4">
      {title.split(' ').slice(0, 2).join(' ')}<br />
      {title.split(' ').slice(2).join(' ')}
    </h3>
    <p class="text-white text-sm mb-4 opacity-90 hidden group-hover:block">
      {description}
    </p>
    <div class="flex gap-4 flex-wrap">
      {tags.map(tag => (
        <span class="text-white text-xs border border-white/30 px-2 py-1 font-tech uppercase">
          {tag}
        </span>
      ))}
    </div>
    {links && (
      <div class="mt-4 flex gap-4 opacity-0 group-hover:opacity-100 transition-opacity">
        {links.live && (
          <a href={links.live} class="text-white text-xs font-tech uppercase hover:text-safety-orange flex items-center gap-1">
            <i data-lucide="external-link" class="w-3 h-3"></i> Live
          </a>
        )}
        {links.github && (
          <a href={links.github} class="text-white text-xs font-tech uppercase hover:text-safety-orange flex items-center gap-1">
            <i data-lucide="github" class="w-3 h-3"></i> Code
          </a>
        )}
      </div>
    )}
  </div>
</div>
