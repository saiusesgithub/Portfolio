---
import { techStack } from '../data/portfolio';
---

<section class="w-full border-beam-b">
  <div class="bg-black text-white px-6 py-2 font-tech text-xs border-beam-b tracking-widest uppercase flex items-center gap-2">
    <i data-lucide="layers" class="w-3 h-3"></i> Tech Stack & Tools
  </div>
  <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-8 bg-concrete">
    {techStack.map((tech, index) => (
      <div class={`h-32 flex flex-col items-center justify-center gap-2 p-4 opacity-60 hover:opacity-100 transition-opacity duration-300 ${index < techStack.length - 1 ? 'border-beam-r' : ''}`}>
        <i data-lucide={tech.icon} class="w-12 h-12"></i>
        <span class="font-tech text-[10px] uppercase tracking-wider">{tech.name}</span>
      </div>
    ))}
  </div>
</section>
