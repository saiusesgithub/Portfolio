---
interface Props {
  title: string;
  icon: string;
  description: string;
}

const { title, icon, description } = Astro.props;
---

<div class="cursor-target p-8 lg:p-12 hover:bg-white transition-colors duration-0 group relative border-beam-b lg:border-b-0 lg:border-beam-r last:border-r-0">
  <!-- Dimension Lines (Interaction) -->
  <div class="absolute top-4 left-4 w-4 h-4 border-l-2 border-t-2 border-safety-orange hidden group-hover:block"></div>
  <div class="absolute top-4 right-4 w-4 h-4 border-r-2 border-t-2 border-safety-orange hidden group-hover:block"></div>
  <div class="absolute bottom-4 left-4 w-4 h-4 border-l-2 border-b-2 border-safety-orange hidden group-hover:block"></div>
  <div class="absolute bottom-4 right-4 w-4 h-4 border-r-2 border-b-2 border-safety-orange hidden group-hover:block"></div>
  
  <h3 class="font-bold text-xl uppercase mb-4 flex items-center gap-2">
    <i data-lucide={icon} class="w-5 h-5"></i> {title}
  </h3>
  <p class="text-sm font-medium leading-relaxed opacity-80">
    {description}
  </p>
</div>
